{
  "description": "A better Shoop.de Add-on",
  "manifest_version": 2,
  "name": "BetterShoop",
  "version": "1.1",
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": [
      "constants.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "constants.js",
        "jquery-3.5.1.min.js",
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "content.css"
  ]
}